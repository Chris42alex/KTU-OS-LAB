#include <stdio.h>
#include <stdlib.h>  // for abs()

int main() {
    int i, n, head, total = 0;
    int req[50];

    // --- Input ---
    printf("Enter the number of requests: ");
    scanf("%d", &n);

    printf("Enter the request sequence: ");
    for(i = 0; i < n; i++)
        scanf("%d", &req[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    // --- FCFS Head Movement ---
    printf("\nHead movement sequence:\n");
    printf("%d", head);  // starting position

    for(i = 0; i < n; i++) {
        total += abs(req[i] - head);  // calculate movement
        printf(" -> %d", req[i]);     // print step
        head = req[i];                // move head
    }

    printf("\nTotal disk movement: %d\n", total);

    return 0;
}
